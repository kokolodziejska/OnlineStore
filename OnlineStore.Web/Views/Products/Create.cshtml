@model OnlineStore.Domain.Models.Product

@{
    ViewData["Title"] = "Create";
}

<h1>Create Product</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" name="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" data-val="true" data-val-required="Price is required." data-val-number="Price must be a valid number." />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <h4>Product Details</h4>
            <div class="form-group">
                <label asp-for="ProductDetail.Description"></label>
                <textarea asp-for="ProductDetail.Description"  class="form-control"></textarea>
                <span asp-validation-for="ProductDetail.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProductDetail.Specifications"></label>
                <textarea asp-for="ProductDetail.Specifications"  class="form-control"></textarea>
                <span asp-validation-for="ProductDetail.Specifications" class="text-danger"></span>
            </div>

            <button type="submit" name="Create" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" name="Back to List">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script src="~/lib/jquery/jquery.js"></script>
        <script src="~/lib/jquery-validation/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    }
}

